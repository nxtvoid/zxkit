{
  "name": "zxkit",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.6.1",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.3",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "check": "turbo check-types",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json,mjs,css}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,md,json,mjs,css}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs,json,md,css}": [
      "bunx prettier --write"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
