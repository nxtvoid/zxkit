{
  "name": "@zxkit/qrix",
  "version": "1.0.0",
  "description": "A React library for generating and rendering QR codes",
  "author": "nxtvoid",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nxtvoid/zxkit/tree/main/packages/qrix"
  },
  "keywords": [
    "qr",
    "qrcode",
    "qr-code",
    "react",
    "react-qr",
    "qr-generator"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "rollup -c",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit"
  },
  "bugs": {
    "url": "https://github.com/nxtvoid/zxkit/issues"
  },
  "homepage": "https://github.com/nxtvoid/zxkit/tree/main/packages/qrix#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@rollup-extras/plugin-clean": "^1.3.9",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.0.0",
    "@workspace/eslint-config": "*",
    "@workspace/typescript-config": "*",
    "eslint": "^9.32.0",
    "react": "^19.0.0",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-preserve-directives": "^1.1.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  }
}
